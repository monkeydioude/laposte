# gRPC broker
BROKER_ADDR="[::]:8022"
SERVICE_ID=email-service
SERVICE_NAME=email-service

CONFIG_PATH=./config.yml

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587 # 465 for SSL

SMTP_USER=your.user@gmail.com
SMTP_PASS=your-app-password-here

SMTP_FROM="Your Service <your.user@gmail.com>"

# Dev
# If true, do not actually send emails, just log
DRY_RUN=true
# DRY_RUN=false

HTTP_PORT=8080
HISTORY_DB_PATH=./var/history.sqlite

# PostgreSQL (preferred: single URL, else individual params)
# POSTGRES_URL=postgres://user:pass@localhost:5432/email_history
# or:
# PGHOST=localhost
# PGPORT=5432
# PGUSER=user
# PGPASSWORD=pass
# PGDATABASE=email_history

# Default language
LANG_DEFAULT=fr

