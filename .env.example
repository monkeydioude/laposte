# gRPC broker
BROKER_ADDR="[::]:8022"
SERVICE_NAME=email-service

CONFIG_PATH=./config.yml

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587 # 465 for SSL

SMTP_USER=your.user@gmail.com
SMTP_PASS=your-app-password-here

SMTP_FROM="Your Service <your.user@gmail.com>"

# Dev
# If true, do not actually send emails, just log
DRY_RUN=true
# DRY_RUN=false

HTTP_PORT=8080

# PostgreSQL (preferred: single URL, else individual params)
PGHOST=localhost
PGPORT=5432
PGUSER=dev
PGPASSWORD=dev
PGDATABASE=email_history

# Default language
LANG_DEFAULT=fr

